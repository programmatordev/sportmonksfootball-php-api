{
    "name": "programmatordev/sportmonksfootball-php-api",
    "description": "SportMonksFootball PHP library that provides convenient access to the SportMonks Football API",
    "type": "library",
    "keywords": ["SportMonksFootball", "Football", "API", "PHP", "PHP8", "SDK", "PSR-18", "PSR-17", "PSR-6", "PSR-3"],
    "license": "MIT",
    "authors": [
        {
            "name": "André Pimpão",
            "email": "a.pimpao@programmator.dev",
            "homepage": "https://programmator.dev/"
        }
    ],
    "require": {
        "php": ">=8.1",
        "php-http/client-common": "^2.7",
        "php-http/discovery": "^1.19",
        "programmatordev/yet-another-php-validator": "^0.2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "symfony/options-resolver": "^6.3"
    },
    "require-dev": {
        "nyholm/psr7": "^1.8",
        "php-http/mock-client": "^1.6",
        "phpunit/phpunit": "^10.0",
        "symfony/http-client": "^6.3",
        "symfony/var-dumper": "^6.3"
    },
    "provide": {
        "psr/http-client-implementation": "1.0",
        "psr/http-factory-implementation": "1.0"
    },
    "autoload": {
        "psr-4": {
            "ProgrammatorDev\\SportMonksFootball\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProgrammatorDev\\SportMonksFootball\\Test\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
